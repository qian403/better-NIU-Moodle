{
  "manifest_version": 2,
  "name": "NIU Moodle Helper",
  "version": "1.1.0",
  "description": "宜蘭大學 Moodle 優化插件",
  "author": "CHIEN https://blog.qian30.net",
  "homepage_url": "https://github.com/chien/Better-NIU-Moodle",
  
  "permissions": [
    "storage",
    "https://euni.niu.edu.tw/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://euni.niu.edu.tw/mod/assign/*",
        "https://euni.niu.edu.tw/course/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "NIU Moodle Helper",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": "script-src 'self'; object-src 'self'",
  
  "web_accessible_resources": [
    "icons/*"
  ]
}
